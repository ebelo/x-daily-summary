# Copy this file to .env and fill in your values from https://developer.twitter.com/en/portal/dashboard

# X / Twitter API Credentials
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here
X_BEARER_TOKEN=your_bearer_token_here

# Gemini API Key (for Intelligence Layer synthesis)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-flash-latest

# Intelligence Backend: "gemini" (cloud) or "ollama" (local)
INTEL_BACKEND=gemini

# Ollama (local model) settings â€” only needed if INTEL_BACKEND=ollama
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=mistral
